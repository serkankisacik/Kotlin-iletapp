<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    tools:context=".kilavuz1">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginTop="48dp"
        android:contentDescription="TODO"
        android:src="@drawable/noktalariki"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="306dp"
        android:layout_height="341dp"
        android:contentDescription="TODO"
        android:src="@drawable/gorselgezinibelirle"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="53dp" />

    <TextView
        android:id="@+id/txtgezinibelirle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Gezini Belirle"
        android:textColor="#2E0D19"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:layout_editor_absoluteX="102dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/atla"
        android:textColor="#2E0D19"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        tools:layout_editor_absoluteX="334dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Uygulamamız üzerinden gideceğin yeri ve alabileceğin yükü belirle"
        android:textColor="#9F9F9F"
        app:layout_constraintTop_toBottomOf="@+id/txtgezinibelirle"
        tools:layout_editor_absoluteX="56dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnKilavuzSonraki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bosbuton"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/sonraki"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#395950"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:layout_editor_absoluteX="162dp" />

</androidx.constraintlayout.widget.ConstraintLayout>