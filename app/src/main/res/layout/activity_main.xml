<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ana_sayfaya_ho_geldiniz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="356dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:onClick="gitGiris"
        android:text="@string/giri_fragmenti"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="144dp" />

    <ImageView
        android:id="@+id/imageViewMessafe"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:onClick="gitSohbet"
        app:layout_constraintStart_toEndOf="@+id/imageViewHome"
        app:layout_constraintTop_toTopOf="@+id/imageViewHome"
        app:srcCompat="@drawable/mesajyesil" />

    <ImageView
        android:id="@+id/imageViewHome"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/evyesil" />

    <ImageView
        android:id="@+id/imageViewUser"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:onClick="gitProfil"
        app:layout_constraintStart_toEndOf="@+id/imageViewMap"
        app:layout_constraintTop_toTopOf="@+id/imageViewMap"
        app:srcCompat="@drawable/kullaniciyesil" />

    <ImageView
        android:id="@+id/imageViewMap"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:onClick="gitKargo"
        app:layout_constraintStart_toEndOf="@+id/imageViewMessafe"
        app:layout_constraintTop_toTopOf="@+id/imageViewMessafe"
        app:srcCompat="@drawable/mappinyesil" />

</androidx.constraintlayout.widget.ConstraintLayout>