<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".sendOffer">

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/KoyuMor"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOde" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="201dp"
        android:layout_height="0dp"
        android:layout_marginBottom="133dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="QR kodunuz burada oluşturulacak"
        android:textColor="@color/KoyuMor"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Ödeme Yap"
        android:textColor="@color/KoyuMor"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/priceTextOffer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Tutar: "
        android:textColor="@color/KoyuMor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView28"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="29dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Tutar: "
        android:textColor="@color/KoyuMor"
        app:layout_constraintBaseline_toBaselineOf="@+id/priceTextOffer"
        app:layout_constraintEnd_toStartOf="@+id/priceTextOffer"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Kart Sahibi:"
        android:textColor="@color/KoyuMor"
        app:layout_constraintBaseline_toBaselineOf="@+id/kartAd"
        app:layout_constraintEnd_toStartOf="@+id/kartAd"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="178dp"
        android:layout_marginBottom="266dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Kart Numarası:"
        android:textColor="@color/KoyuMor"
        app:layout_constraintBottom_toTopOf="@+id/textView20"
        app:layout_constraintEnd_toEndOf="@+id/textView14"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Son Kullanım: "
        android:textColor="@color/KoyuMor"
        app:layout_constraintBaseline_toBaselineOf="@+id/kartNo2"
        app:layout_constraintEnd_toEndOf="@+id/textView14"
        app:layout_constraintEnd_toStartOf="@+id/kartNo2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="CVV2:"
        android:textColor="@color/KoyuMor"
        app:layout_constraintBaseline_toBaselineOf="@+id/kartNo3"
        app:layout_constraintEnd_toEndOf="@+id/textView14"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <EditText
        android:id="@+id/kartNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/rounded_layout"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/KoyuMor"
        android:textColorHint="@color/koyuGri"
        app:layout_constraintEnd_toEndOf="@+id/kartAd"
        app:layout_constraintTop_toBottomOf="@+id/kartAd" />

    <EditText
        android:id="@+id/kartNo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="26dp"
        android:background="@drawable/rounded_layout"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/KoyuMor"
        android:textColorHint="@color/koyuGri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/kartNo" />

    <EditText
        android:id="@+id/kartNo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_layout"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/KoyuMor"
        android:textColorHint="@color/koyuGri"
        app:layout_constraintStart_toEndOf="@+id/textView18"
        app:layout_constraintTop_toBottomOf="@+id/kartNo2" />

    <EditText
        android:id="@+id/kartAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_layout"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/KoyuMor"
        android:textColorHint="@color/koyuGri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.726"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceTextOffer" />

    <Button
        android:id="@+id/btnOde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/butonyesil"
        android:fontFamily="@font/poppins_semibold"
        android:onClick="paymentConfirm"
        android:text="Ödeme Yap"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kartNo3" />

    <ImageView
        android:id="@+id/ivQRCode"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/arkaplanorjinaltransparan30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

</androidx.constraintlayout.widget.ConstraintLayout>