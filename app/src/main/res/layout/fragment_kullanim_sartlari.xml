<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".kullanimSartlari">


    <TextView
        android:id="@+id/textViewKS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/k"
        android:textColor="@color/KoyuMor"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewKullanimSartlari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="19dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/kullan_m_artlar"
        android:textColor="@color/KoyuMor"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewKSbir"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewKSbir"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="117dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Uygulamanın kullanılması amacıyla sınırlı olarak Uygulama’ya giriş yapabilmesi ve Uygulama’da yer alan bilgilere erişebilmesi için üye olan kullanıcılara özel bir kullanıcı adı ve şifre tanımlanacaktır. Kullanıcılar, kullanıcı adını ve şifresini gizli tutacağını, herhangi bir üçüncü kişiyle paylaşmayacağını, bu şifrenin yanlış kullanımından ya da çalınması/kaybolması hallerinden doğabilecek tüm zararlardan sorumlu olacağını, işbu maddenin ihlali ve/veya kullanıcı adı ve şifresinin hatalı kullanımı ya da çalınması/kaybolması hallerinde derhal İLET Müşteri Hizmetleri’ne bildireceğini kabul ve taahhüt eder."
        android:textColor="@color/KoyuMor"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/buttonKSKabul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="99dp"
        android:background="@drawable/butonyesil"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/kabul_et"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonKSKabul2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonKSKabul2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/butonturuncu"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/reddet"
        android:textColor="@color/KoyuMor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonKSKabul" />
</androidx.constraintlayout.widget.ConstraintLayout>